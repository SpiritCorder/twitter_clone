extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/search.css")

block content
    script.
        const selectedTab = '!{selectedTab}' ? '!{selectedTab}' : 'posts';

    .searchBoxContainer
        i.fas.fa-search
        input#searchInput(type="text", name="searchVal", placeholder="Search for users and posts")

    .tabsContainer
        +createTab('Posts', `/search/posts`, selectedTab != 'users')
        +createTab('Users', `/search/users`, selectedTab == 'users')

    .searchResultsContainer

block scripts
    script(src="/js/search.js")